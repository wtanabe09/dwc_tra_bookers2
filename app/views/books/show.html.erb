<div class="container">
  <div class="row">
    <%= render 'books/left', user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      
      <table class="table">
        <tbody>
          <tr>
           <td>
              <%= link_to user_path(@show_book.user) do %>
                <%= attachment_image_tag @show_book.user, :profile_image, fallback: "no_image.jpg", size: "40x40" %><br>
                <%= @user.name %>
              <% end %>
            </td>
            <td><%= link_to @show_book.title, book_path(@show_book) %></td>
            <td><%= @show_book.body %></td>
             <% if @show_book.favorited_by?(current_user) %>
              <td>
                <%= link_to book_favorites_path(@show_book), method: :delete, class: "text-danger" do %>
                  <i class="fas fa-heart"></i><%= @show_book.favorites.count %>
                <% end %>
              </td>
            <% else %>
              <td>
                <%= link_to book_favorites_path(@show_book), method: :post do %>
                  <i class="fas fa-heart"></i><%= @show_book.favorites.count %>
                <% end %>
              </td>
            <% end %>
            <td>コメント件数：<%= @show_book.book_comments.count %></td>
            <% if @user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@show_book), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@show_book), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に削除しますか？" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
      
      <div class="comments mb-5">
        <% @show_book.book_comments.each do |book_comment| %>
          <div class="comment_block">
            <%= link_to user_path(book_comment.user) do %>
              <%= attachment_image_tag book_comment.user, :profile_image, fallback: "no_image.jpg", size: "40x40" %><br>
              <%= book_comment.user.name %>
            <% end %>
            <%= book_comment.comment %>
            <% if book_comment.user_id == current_user.id %>
              <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger" %>
            <% end %>
          </div>
        <% end %>
      </div>
      
      <div id="error_explanation" class="text-danger">
        <% if @book_comment.errors.any? %>
          <h3><%= pluralize(@book_comment.errors.count, "error") %> prohibited this obj from being saved:</h3>
          <ul>
            <% @book_comment.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
      
      <div class="new-comment">
        <%= form_with(model:[@show_book,@book_comment], local: true) do |f| %>
          <div class="form-group">
            <%= f.text_area :comment, rows:'5', class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit "送信" %>
          </div>
        <% end %>
      </div>
      
    </div>
  </div>
</div>

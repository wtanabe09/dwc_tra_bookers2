<div class="new-comment">
  <%= form_with model:[book, comment], remote: true do |f| %>
    <div id="error_explanation" class="text-danger">
      <% if comment.errors.any? %>
        <h3><%= pluralize(comment.errors.count, "error") %> prohibited this obj from being saved:</h3>
        <ul>
          <% comment.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.text_area :comment, rows:'5', class: "form-control content_area" %>
    </div>
    <div class="form-group">
      <%= f.submit "送信", class:"btn border-dark" %>
    </div>
  <% end %>
</div>
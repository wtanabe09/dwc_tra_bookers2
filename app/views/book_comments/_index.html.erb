<% book.book_comments.each do |book_comment| %>
  <div class="comment_block">
    <%= link_to user_path(book_comment.user) do %>
      <% if book_comment.user.profile_image.attached? %>
        <%= image_tag book_comment.user.profile_image, size: "40x40" %>
      <% else %>
        <%= image_tag 'no_image', size: "40x40" %>
      <% end %>
      <%= book_comment.user.name %>
    <% end %>
    <%= book_comment.comment %>
    <% if book_comment.user_id == current_user.id %>
      <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
    <% end %>
  </div>
<% end %>
